{
  "private": true,
  "scripts": {
    "clean:lerna": "lerna clean",
    "clean:node_modules": "find . \\( -name 'node_modules' -or -name 'yarn.lock' -or -name 'yarn-error.log' \\) -prune -exec rm -rf '{}' +",
    "clean": "rm -f lerna-debug.log && lerna run clean",
    "clean:all": "yarn clean && yarn clean:lerna && yarn clean:node_modules",
    "build": "lerna run build",
    "dist": "lerna run dist",
    "prepublishOnly": "lerna run prepublishOnly",
    "test": "NODE_ENV=test lerna run test --stream",
    "test:e2e": "NODE_ENV=test lerna run test:e2e --stream --concurrency 1",
    "test:coverage": "lerna run test:coverage --stream",
    "format": "prettier --write \"**/*\"",
    "lint": "run-p tsc eslint stylelint",
    "tsc": "lerna run tsc",
    "eslint": "eslint . '**/*.{js,jsx,ts,tsx}'",
    "stylelint": "stylelint '**/*.scss'",
    "precommit": "yarn build && run-p lint format",
    "prepush": "run-p test test:e2e",
    "publish:lerna": "lerna publish --dist-tag next --no-git-tag-version --no-push --registry=https://registry.npmjs.org # Custom example: 0.8.0-beta.1",
    "npm:update": "yarn clean:all && find . -type f -name 'package.json' -not -path './.git/*' -not -path '*/node_modules/*' -execdir npx npm-check-updates --upgrade \\; && yarn"
  },
  "workspaces": [
    "packages/*",
    "examples/Bootstrap4",
    "examples/ClubMembers",
    "examples/HTML5ConstraintValidationAPI",
    "examples/MaterialUI",
    "examples/Password",
    "examples/PasswordWithoutState",
    "examples/PlainOldReact",
    "examples/ServerSideRendering",
    "examples/SignUp",
    "examples/WizardForm"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "stylelint": "^13.2.1",
    "stylelint-config-airbnb": "^0.0.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.16.0",
    "typescript": "^3.8.3"
  }
}
